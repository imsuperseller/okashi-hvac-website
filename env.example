# Okashi HVAC Services - Environment Configuration
# Copy this file to .env and replace placeholder values with actual API keys

# Server Configuration
NODE_ENV=development
PORT=3000

# API Keys (Replace with actual keys)
OPENWEATHER_API_KEY=YOUR_OPENWEATHER_API_KEY
YELP_API_KEY=YOUR_YELP_API_KEY
HUNTER_API_KEY=YOUR_HUNTER_API_KEY
NUMVERIFY_API_KEY=YOUR_NUMVERIFY_API_KEY
WORKIZ_API_TOKEN=YOUR_WORKIZ_API_TOKEN

# Google Analytics (Optional)
GA_MEASUREMENT_ID=GA_MEASUREMENT_ID

# Email Configuration (Optional - for future use)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Database Configuration (Optional - for future CMS integration)
DATABASE_URL=your-database-url

# Security
JWT_SECRET=your-jwt-secret-key
SESSION_SECRET=your-session-secret-key

# External Services
SANITY_PROJECT_ID=your-sanity-project-id
SANITY_DATASET=production
SANITY_API_TOKEN=your-sanity-api-token 